<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bhanu.basiccalculator.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnSubtract"

        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="13dp"
        android:text="-"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="/"
        android:textSize="20sp"
        android:layout_marginStart="13dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSubtract"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/btnSubtract" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="x"
        android:textSize="15sp"
        android:layout_marginEnd="1dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDivide"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/textViewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input B"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_marginStart="21dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editTextB"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextB"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="-12dp" />

    <EditText
        android:id="@+id/editTextB"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="158dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/holo_green_dark"
        android:paddingBottom="10dp"

        android:paddingLeft="25dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="My Basic Calculator"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="35sp"
        android:layout_marginEnd="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextA"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="1dp"

        android:ems="10"
        android:inputType="numberDecimal"

        android:paddingLeft="10dp"

        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textViewA"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textViewA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input A"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="italic"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editTextB"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="@+id/editTextA"
        app:layout_constraintTop_toTopOf="@+id/textViewB"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="27dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="+"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSubtract"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="1019dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="12dp"
        android:text="RESULT is :"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/textViewR"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textViewR"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnAdd"
        app:layout_constraintTop_toTopOf="@+id/textViewR" />

    <TextView
        android:id="@+id/CreditsBhanu"
        style="@style/Base.TextAppearance.AppCompat.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Credits : BHANU"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textViewR"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="77dp"
        android:paddingTop="2dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="35sp"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintLeft_toRightOf="@+id/btnSubtract"
        app:layout_constraintRight_toRightOf="@+id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/editTextB"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
